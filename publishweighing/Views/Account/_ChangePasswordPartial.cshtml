@model  weighingControlSystem.Models.LocalPasswordModel

<h3>Change password</h3>

@using (Html.BeginForm("Manage", "Account"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <br />
    <div class="col-sm-4">
        <div class="form-group">
            <div class="form-line">
                 @Html.LabelFor(m => m.OldPassword)
                @Html.PasswordFor(m => m.OldPassword, new{ @class="form-control",@required="required" })
              
             
            </div>

        </div>

    </div>
    
     <div class="col-sm-4">
        <div class="form-group">
            <div class="form-line">
                 @Html.LabelFor(m => m.NewPassword)
                @Html.PasswordFor(m => m.NewPassword, new{ @class="form-control",@required="required" })
          
             
            </div>

        </div>

    </div>
    
      <div class="col-sm-4">
        <div class="form-group">
            <div class="form-line">
                 @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword,new{ @class="form-control",@required="required" })
            
            </div>

        </div>

    </div>
    <div class="col-sm-12">
         <input type="submit" value="Change password"  class="btn btn-primary btn-lg m-l-15 waves-effect"/>
    </div>
}
