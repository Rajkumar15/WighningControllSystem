@model weighingControlSystem.Models.DAL.tbl_contractor

@{
    ViewBag.Title = "truckMapping";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <h2>Contactor</h2>
        </div>
        @using (Html.BeginForm())
        {
            <div class="row clearfix">
                <div class="col-sm-12 col-lg-12 col-md-12 col-xs-12">
                    <div class="card">
                        <div class="header">
                            <h2>New Contractor
                            </h2>
                        </div>
                        <div class="body">
                            <div class="row clearfix">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="form-line">
                                            <label>Contactor Name<span style="color: red">*</span></label>
                                            @Html.TextBoxFor(x => x.contratorName, new { @class = "form-control", placeholder = "Contactor Name ", @required = "required" })
                                        </div>

                                    </div>

                                </div>

                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="form-line">
                                            <label>Address</label>
                                            @Html.TextAreaFor(x => x.Address, new { @class = "form-control", placeholder = "Address" })

                                        </div>

                                    </div>

                                </div>

                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="form-line">
                                            <label>Token Number</label>
                                            @Html.TextBoxFor(x => x.Contact, new { @class = "form-control", placeholder = "Token No" })

                                        </div>

                                    </div>

                                </div>

                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="form-line">
                                            <label>Email</label>
                                            @Html.TextBoxFor(x => x.email, new { @class = "form-control", placeholder = "Email", @type = "email" })
                                        </div>

                                    </div>

                                </div>
                                <div class="col-sm-12">

                                    <input type="submit" value="Save" class="btn btn-primary btn-lg m-l-15 waves-effect" />
                                    <input type="reset" value="Reset" class="btn btn-primary btn-lg m-l-15 waves-effect" />


                                </div>


                            </div>
                        </div>
                        

                    </div>
                </div>
            </div>
        }
    </div>
</section>
<script src="~/Scripts/jquery-1.12.3.min.js"></script>
<script type="text/javascript">
    if ('@ViewBag.alert' != '') {

        alert('@ViewBag.alert');
  }

</script>